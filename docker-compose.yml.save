version: "3.5"

services:
    zambda:
        build: ./zambda
        container_name: "messaging_app"
        command: python manage.py runserver 0.0.0.0:8000
        # environment: &env
        #     - REDIS_HOST=redis
        #     - CELERY_BROKER=redis://redis:6379/0
        #     - CELERY_BACKEND=redis://redis:6379/0
        env_file:
            - ./docker/env/global.env
        ports:
            - 8000:8000
        volumes:
            - .:/app
        networks:
            - my_network
            
    nginx-zambda:
        build: ./docker/nginx
        container_name: "nginx"
        ports:
            - 80:80
            - 443:443
	volumes:
	    - zambda/allstatic:/
        networks:
            - my_network

    redis:
        build: ./docker/redis
        container_name: "redis_database"
        ports:
            - 6379:6379
        volumes:
            - redis_data:/data
        networks:
            - my_network

    celery:
        build: ./zambda
        command: celery worker -A zambda -l info
        env_file:
            - ./docker/env/global.env
        depends_on:
            - zambda
            - redis
        volumes:
            # - ./var/logs/celery:/usr/src/app
            - .:/app
        networks:
            - my_network

    celery-beat:
        build: ./zambda
        command: celery beat -A zambda -l info
        env_file:
            - ./docker/env/global.env
        depends_on:
            - redis
        volumes:
            # - ./var/logs:/usr/src/app/
            - .:/app
        networks:
            - my_network

    flower:
        build: ./zambda
        command: flower -A zambda --port=5555 --broker=redis://redis:6379/0
        env_file:
            - ./docker/env/global.env
        ports:
            - 5555:5555
        depends_on:
            - zambda
            - redis
            - celery
        networks:
            - my_network

volumes:
    redis_data: {}

networks:
    my_network:
        name: "my_network_test"
        driver: bridge
        # ipv4_address: 172.16.238.10 
